<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hướng dẫn sử dụng"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginVertical="12dp"/>

        <Button
            android:id="@+id/btn_guide_view_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cách xem vị trí bò"
            android:layout_marginBottom="16dp"
            android:textSize="16dp"
            android:padding="14dp"/>


        <Button
            android:id="@+id/btn_guide_add_cow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cách thêm bò và thẻ mới"
            android:layout_marginBottom="16dp"
            android:textSize="16dp"
            android:padding="14dp"/>

        <Button
            android:id="@+id/btn_guide_link_epc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cách liên kết thẻ với bò có sẵn"
            android:layout_marginBottom="16dp"
            android:textSize="16dp"
            android:padding="14dp"/>

        <Button
            android:id="@+id/btn_guide_edit_cow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cách sửa thông tin bò"
            android:layout_marginBottom="16dp"
            android:textSize="16dp"
            android:padding="14dp"/>


        <Button
            android:id="@+id/btn_guide_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cách xem &amp; chỉnh sửa hình ảnh bò"
            android:layout_marginBottom="16dp"
            android:textSize="16dp"
            android:padding="14dp"/>


        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quay lại"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_marginTop="24dp"
            android:textSize="16dp"
            android:padding="14dp"/>

    </LinearLayout>
</ScrollView>